<section class="d-flex flex-column align-items-center justify-content-center">

<%= form_with(model:@post,class: 'p-3',local:true) do |f|%>
<div class="form-group">
<%= f.label :title %> </br>
<%= f.text_field :title, autofocus:true, autocomplete: "description", class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :Description %> </br>
<%= f.text_area :description, autofocus:true, autocomplete: "description", class: 'form-control' %>
</div>

<div>
<%= f.submit 'Create Task', class:'btn btn-outline-light btn-lg' %>
</div>

    <% end %>

</section>